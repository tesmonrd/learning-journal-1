{% extends "base.jinja2" %}
{%block content%}
<form method="POST" action="">
    <div>{{ form.title.label }}: {{ form.title(size=100) }}</div>
        {% if form.title.errors %}
            <ul class="errors">
            {% for error in form.title.errors %}
                <li>{{ error }}</li>
            {% endfor %}
            </ul>
        {% endif %}

    <div>{{ form.text.label }}: {{ form.text(cols=94, rows=25) }}</div>
        {% if form.text.errors %}
            <ul class="errors">
            {% for error in form.text.errors %}
                <li>{{ error }}</li>
            {% endfor %}
            </ul>
        {% endif %}
    <input type="submit" value="submit">
</form>

{% endblock content %}